@using Service.Interfacies.Entities
@model WebApplication.Models.BookModels.BookShortModel

<div class="panel panel-default">
    <div class="panel-body">
        <div class="col-md-3">
            <img class="img-thumbnail" src="@Url.Action("GetImage","Books", new {id = Model.ID})" alt="cover image"/>
        </div>
        <div class="row col-md-9">
            <div class="col-md-12">
                <h3>@Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-3" })</h3>
                <h3>@Html.ActionLink(@Model.Name, "Details", "Books", new { id = Model.ID }, htmlAttributes: new { @class = "control-label col-md-9" })</h3>
            </div>
            <div class="col-md-12">
                <h3>@Html.LabelFor(model => model.Author, htmlAttributes: new { @class = "control-label col-md-3" })</h3>
                <h3>@Html.ActionLink(Model.Author.Name, "Details", "Author", new { id = Model.Author.ID }, htmlAttributes: new { @class = "control-label col-md-9" })</h3>
            </div>
            <div class="col-md-12" id="like-buttons-@Model.ID" style="padding-top: 30px">
                @Html.Partial("_LikeButtonsView", Model.Likes)
            </div>
        </div>
    </div>
    <div class="panel-footer"></div>
</div>
